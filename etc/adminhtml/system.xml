                    </group>
                </group>
                <group id="contracts_specific_settings" translate="label" showInDefault="1" showInWebsite="1" showInStore="1" sortOrder="40">
                    <label>Contracts specific settings</label>
                    <comment>Please fill in the fields in the "Delivery configuration" and "Prefix configuration" section first and foremost. If you they are not filled in, the Default values will be used.</comment>
                    <attribute type="expanded">0</attribute>
                    <field id="address" translate="label" sortOrder="10" showInDefault="1" showInWebsite="1" showInStore="1">
                        <label>Delivery configuration</label>
                        <frontend_model>Monext\Payline\Block\Adminhtml\System\Config\Form\Field\Delivery</frontend_model>
                        <backend_model>Magento\Config\Model\Config\Backend\Serialized\ArraySerialized</backend_model>
                        <config_path>payline/payline_common/address</config_path>
                    </field>
                    <field id="prefix" translate="label" sortOrder="20" showInDefault="1" showInWebsite="1" showInStore="0">
                        <label>Prefix configuration</label>
                        <frontend_model>Monext\Payline\Block\Adminhtml\System\Config\Form\Field\Prefix</frontend_model>
                        <backend_model>Magento\Config\Model\Config\Backend\Serialized\ArraySerialized</backend_model>
                        <config_path>payline/payline_common/prefix</config_path>
                    </field>

                    <group id="default_values" translate="label" showInDefault="1" showInWebsite="1" showInStore="1" sortOrder="100">
