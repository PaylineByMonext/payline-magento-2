                        <field id="redirect_message" translate="label" type="textarea" sortOrder="80" showInDefault="1" showInWebsite="1" showInStore="1">
                            <label>Redirection message</label>
                            <config_path>payment/payline_web_payment_nx/redirect_message</config_path>
                        </field>
                        <group id="advanced_settings_nx" translate="label" showInDefault="1" showInWebsite="1" showInStore="1" sortOrder="90">
                            <label>Advanced settings</label>
                            <attribute type="expanded">0</attribute>
                            <field id="billing_occurrences" translate="label" type="select" sortOrder="10" showInDefault="1" showInWebsite="1" showInStore="1">
                                <label>Billing occurences</label>
                                <source_model>Monext\Payline\Model\System\Config\Source\BillingOccurances</source_model>
                                <config_path>payment/payline_web_payment_nx/billing_occurrences</config_path>
                            </field>
                            <field id="billing_cycle" translate="label" type="select" sortOrder="20" showInDefault="1" showInWebsite="1" showInStore="1">
                                <label>Billing cycle</label>
                                <source_model>Monext\Payline\Model\System\Config\Source\BillingCycles</source_model>
                                <config_path>payment/payline_web_payment_nx/billing_cycle</config_path>
                            </field>
                            <field id="send_wallet_id" translate="label comment" type="select" sortOrder="30" showInDefault="1" showInWebsite="1" showInStore="1">
                                <label>Send wallet id</label>
                                <source_model>Magento\Config\Model\Config\Source\Yesno</source_model>
                                <config_path>payment/payline_web_payment_nx/send_wallet_id</config_path>
